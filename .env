# Server Configuration
NODE_ENV=development
PORT=5001
API_URL=http://localhost:5001/api

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=persona_centric_db
DB_USER=postgres
DB_PASSWORD=your_password
DB_URL=postgresql://postgres:your_password@localhost:5432/persona_centric_db

# JWT Configuration
JWT_SECRET=your_super_secret_jwt_key_here
JWT_EXPIRES_IN=7d
JWT_REFRESH_SECRET=your_refresh_token_secret
JWT_REFRESH_EXPIRES_IN=30d

# Redis Configuration
REDIS_URL=redis://localhost:6379
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# Email Configuration (SMTP)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_app_password
EMAIL_FROM=noreply@personacentric.com

# SMS Configuration (Twilio)
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_PHONE_NUMBER=+1234567890

# Payment Configuration (Stripe)
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# File Upload Configuration
UPLOAD_PATH=./uploads
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif,application/pdf

# AI Content Generation
OPENAI_API_KEY=your_openai_api_key
AI_CONTENT_LIMIT=100
AI_CONTENT_COST=10

# Analytics and Monitoring
SENTRY_DSN=your_sentry_dsn
GOOGLE_ANALYTICS_ID=GA_MEASUREMENT_ID

# Security Configuration
BCRYPT_ROUNDS=12
RATE_LIMIT_WINDOW=15
RATE_LIMIT_MAX=100
CORS_ORIGIN=http://localhost:3000

# Logging Configuration
LOG_LEVEL=info
LOG_FILE=./logs/app.log

# Feature Flags
ENABLE_AI_CONTENT=true
ENABLE_CONTESTS=true
ENABLE_BLOG=true
ENABLE_QUIZ=true
ENABLE_INSURANCE=true
ENABLE_ACCESS_CODES=true

# SEO Configuration
SITE_URL=https://personacentric.com
SITE_NAME=Persona Centric Financial Platform

# Food for Talk Feature
ENABLE_FOOD_FOR_TALK=true

# Cloudinary Configuration
CLOUDINARY_CLOUD_NAME=your_cloudinary_cloud_name
CLOUDINARY_API_KEY=your_cloudinary_api_key
CLOUDINARY_API_SECRET=your_cloudinary_api_secret
