{
  "version": 2,
  "builds": [
    {
      "src": "client/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "build"
      }
    }
  ],
  "routes": [
    {
      "src": "/(.*)",
      "dest": "/client/build/$1"
    }
  ],
  "env": {
    "REACT_APP_SITE_URL": "https://personacentric.com",
    "REACT_APP_SITE_NAME": "Persona Centric Financial Platform",
    "REACT_APP_API_URL": "https://webpersonacentric-personacentric.up.railway.app/api",
    "REACT_APP_WS_URL": "wss://webpersonacentric-personacentric.up.railway.app"
  }
} 