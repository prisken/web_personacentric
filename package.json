{
  "name": "persona-centric-financial-platform",
  "version": "1.0.0",
  "description": "Persona Centric Financial Platform - AI-powered financial advisory platform",
  "main": "server/index.js",
  "scripts": {
    "start": "node server/index.js",
    "dev": "nodemon server/index.js",
    "client": "cd client && npm start",
    "build": "npm run install-all && cd client && npm run build",
    "install-client": "cd client && npm install",
    "install-server": "npm install",
    "install-all": "npm run install-server && npm run install-client",
    "dev-full": "concurrently \"npm run dev\" \"npm run client\"",
    "db:reset": "node server/utils/resetDatabase.js",
    "seed": "node server/utils/seeder.js",
    "db:fix": "node -e \"const DatabaseFixer = require('./server/utils/databaseFixer'); new DatabaseFixer().fixAll().then(() => process.exit(0)).catch(() => process.exit(1));\"",
    "migrate": "node server/utils/runMigrations.js up",
    "migrate:up": "node server/utils/runMigrations.js up",
    "migrate:down": "node server/utils/runMigrations.js down",
    "migrate:status": "node server/utils/runMigrations.js status",
    "super-admin:create": "node server/scripts/createSuperAdmin.js",
    "super-admin:migrate": "node server/scripts/migrateAdmins.js",
    "super-admin:bootstrap": "node server/scripts/bootstrapSuperAdmin.js bootstrap",
    "super-admin:test": "node server/scripts/bootstrapSuperAdmin.js test",
    "migrate:mark-existing": "node server/scripts/markExistingMigrations.js",
    "test": "jest --detectOpenHandles",
    "test:super-admin": "jest server/tests/superAdmin.test.js --detectOpenHandles"
  },
  "dependencies": {
    "axios": "^1.6.0",
    "bcryptjs": "^2.4.3",
    "cloudinary": "^2.7.0",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "helmet": "^7.1.0",
    "jsonwebtoken": "^9.0.2",
    "multer": "^1.4.5-lts.1",
    "node-cron": "^3.0.3",
    "pg": "^8.11.3",
    "sequelize": "^6.35.0",
    "sqlite3": "^5.1.6",
    "uuid": "^8.3.2",
    "winston": "^3.17.0"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "nodemon": "^3.0.2"
  },
  "keywords": [
    "financial",
    "ai",
    "advisory",
    "platform",
    "persona-centric"
  ],
  "author": "Persona Centric Team",
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  }
}
